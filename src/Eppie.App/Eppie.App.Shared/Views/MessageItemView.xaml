<UserControl x:Class="Eppie.App.Views.MessageItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="using:Tuvi.App.ViewModels"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <LinearGradientBrush x:Key="P2PGradientBrush" StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0.0" Color="#FFD9EE" />
                        <GradientStop Offset="0.5" Color="#FFFFFF" />
                        <GradientStop Offset="1.0" Color="#D9FFFF" />
                    </LinearGradientBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <LinearGradientBrush x:Key="P2PGradientBrush" StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0.0" Color="#FFD9EE" />
                        <GradientStop Offset="0.5" Color="#FFFFFF" />
                        <GradientStop Offset="1.0" Color="#D9FFFF" />
                    </LinearGradientBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <LinearGradientBrush x:Key="P2PGradientBrush" StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0.0" Color="#80334A" />
                        <GradientStop Offset="0.5" Color="#404040" />
                        <GradientStop Offset="1.0" Color="#338080" />
                    </LinearGradientBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="0,2"
          Padding="16,6"
          Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Width="24"
              Height="24"
              HorizontalAlignment="Left"
              VerticalAlignment="Center">
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="14"
                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                      Glyph="&#xE715;"
                      Visibility="{Binding IsMarkedAsRead, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="14"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      Glyph="&#xE8C3;"
                      Visibility="{Binding IsMarkedAsRead}" />
        </Grid>

        <Grid Grid.Row="1"
              Width="24"
              Height="24"
              HorizontalAlignment="Left"
              VerticalAlignment="Center">
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="14"
                      Foreground="{ThemeResource TextFillColorDisabledBrush}"
                      Glyph="&#xE81B;"
                      Visibility="{Binding IsFlagged, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      FontSize="14"
                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                      Glyph="&#xEB4B;"
                      Visibility="{Binding IsFlagged}" />
        </Grid>

        <PersonPicture Grid.Column="1"
                       Width="40"
                       Height="40"
                       VerticalAlignment="Center"
                       DisplayName="{Binding MessageSender, Mode=OneWay}" />

        <StackPanel Grid.Column="2"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center">
            <TextBlock Style="{Binding IsMarkedAsRead, Converter={StaticResource InverseBoolToAccentTextBlockStyleConverter}}"
                       Text="{Binding SenderName}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
            <TextBlock Margin="0,2,0,0"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{Binding SenderEmail}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
        </StackPanel>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Grid.ColumnSpan="2"
              Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Margin="0,0,12,0"
                    Padding="6,2"
                    VerticalAlignment="Center"
                    Background="{ThemeResource P2PGradientBrush}"
                    CornerRadius="8"
                    Visibility="{Binding IsDecentralized}">
                <TextBlock x:Uid="P2PLabel"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           TextAlignment="Center" />
            </Border>

            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       Style="{Binding IsMarkedAsRead, Converter={StaticResource InverseBoolToAccentTextBlockStyleConverter}}"
                       Text="{Binding MessageSubject}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
            <TextBlock Grid.Column="2"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{Binding PreviewText, Mode=OneWay}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
        </Grid>

        <StackPanel x:Name="MetadataPanel"
                    Grid.Column="3"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="12">

            <Border Height="32"
                    Padding="4,0"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="14"
                    Visibility="{Binding HasAttachments, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Attach" />
                    <TextBlock VerticalAlignment="Center" Text="{Binding AttachmentCount}" />
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock x:Uid="MessageTo"
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <Border Height="32"
                        Padding="4,0"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="14">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <PersonPicture Width="24"
                                       Height="24"
                                       DisplayName="{Binding Email.DisplayName, Mode=OneWay}" />
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="{Binding Email.Name}" />
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Visibility="{Binding AdditionalRecipientCount, Converter={StaticResource IntToVisibilityConverter}}">
                            <Run Text="+" /><Run Text="{Binding AdditionalRecipientCount}" />
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <TextBlock MinWidth="96"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                       Text="{Binding DateBriefString}"
                       TextAlignment="Right" />
        </StackPanel>
    </Grid>
</UserControl>
